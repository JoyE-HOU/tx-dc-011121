<h1> Welcome, <%= @user.username %> </h1>

<h1> List of all posts </h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %>
    </li>

    <p> Posted by: <%= link_to post.user.username, user_path(post.user) %> </p>

    <p> Liked by: <% post.users.each do |user| %>
      <%= link_to user.username, user_path(user) %>
    <% end %> </p>


  <% end %>
</ul>
